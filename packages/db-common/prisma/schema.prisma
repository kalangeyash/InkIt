
generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id          String   @id @default(uuid())
  email       String 
  password    String
  name        String
  photo       String
  rooms       Room[]
  chats        Chat[]

}

model Room{
  id          Int  @id @default(autoincrement())
  slug        String    @unique
  createdAt   DateTime  @default(now())
  adminId     String
  admin       User      @relation(fields: [adminId],references: [id])
  chats       Chat[]
}//one to many relationship here . Single room can have single admin id pr multiple usrrs can have same roomid

model Chat{
  id          Int   @id @default(autoincrement())
  roomId      Int
  message     String
  userId      String
  room        Room   @relation(fields: [roomId],references: [id])
  user        User   @relation(fields: [userId],references: [id])
  
}
